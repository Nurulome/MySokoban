{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "java",
        "name": "DesktopLauncher",
        "request": "launch",
        "mainClass": "com.bernardpablo.sokoban.DesktopLauncher",
        "projectName": "core"
    },
    {
        "type": "java",
        "name": "MySokoban",
        "request": "launch",
        "mainClass": "com.bernardpablo.sokoban.MySokoban",
        "projectName": "core"
    },
    {
        "type": "java",
        "name": "Launch MySokoban (LWJGL3)",
        "request": "launch",
        "mainClass": "com.bernardpablo.sokoban.lwjgl3.Lwjgl3Launcher",
        "projectName": "lwjgl3",
        "preLaunchTask": "gradle-build-lwjgl3",
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "vmArgs": [
            "-XstartOnFirstThread"
        ]
    }
]
}
